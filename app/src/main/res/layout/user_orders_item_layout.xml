<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/user_order_item_details_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:background="#CCFDF7"
    app:cardCornerRadius="5dp"
    app:cardElevation="20dp">

    <!-- RelativeLayout to contain the details -->
    <RelativeLayout
        android:id="@+id/user_order_item_details_rel_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C6F8E3">

        <!-- TextViews for displaying order date -->
        <TextView
            android:id="@+id/user_order_item_date_time_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Date and Time"
            android:textColor="#111212"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- TextViews for displaying order book name -->
        <TextView
            android:id="@+id/user_order_item_name_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_date_time_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Name"
            android:textColor="#050505"
            android:textSize="17sp" />

        <!-- TextViews for displaying order phone-->
        <TextView
            android:id="@+id/user_order_item_phone_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_name_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Phone"
            android:textColor="#050505"
            android:textSize="17sp" />

        <!-- TextViews for displaying order city -->
        <TextView
            android:id="@+id/user_order_item_city_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_phone_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="City"
            android:textColor="#050505"
            android:textSize="17sp" />

        <!-- TextViews for displaying order address -->
        <TextView
            android:id="@+id/user_order_item_address_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_city_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Address"
            android:textColor="#050505"
            android:textSize="17sp" />

        <!-- TextViews for displaying order pin -->
        <TextView
            android:id="@+id/user_order_item_pin_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_address_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="Pin No"
            android:textColor="#050505"
            android:textSize="17sp" />

        <!-- TextViews for displaying order total price -->
        <TextView
            android:id="@+id/user_order_item_totalPrice_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_pin_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:text="Total Price"
            android:textColor="#FB1414"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- TextViews for displaying order state -->
        <TextView
            android:id="@+id/user_order_item_state_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_totalPrice_details"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="State"
            android:textColor="#F33333"
            android:textSize="17sp"
            android:textStyle="bold" />

        <!-- Button to view order items -->
        <Button
            android:id="@+id/user_order_show_all_Item_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_order_item_state_details"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="View Order Items"
            android:textColor="#00880E"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#FCFDFD"
            app:cornerRadius="20dp"
            app:textAllCaps="false" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>