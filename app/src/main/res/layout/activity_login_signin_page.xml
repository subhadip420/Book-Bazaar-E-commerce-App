<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Signin_Page"
    android:background="@drawable/bg_grass_book">

    <!-- Image view for displaying app logo or image -->
    <ImageView
        android:id="@+id/seller_book_image"
        android:layout_width="385dp"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-75dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="101dp"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/app_name" />

    <!-- Text view for indicating new user -->
    <TextView
        android:id="@+id/textView_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_book_image"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="60dp"
        android:text="New user"
        android:textColor="#FDFCFC"
        android:textSize="12sp" />

    <!-- Button for new user sign-up -->
    <Button
        android:id="@+id/newuser_signin_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_new_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:insetLeft="12dp"
        android:insetRight="12dp"
        android:text="Create Account"
        android:textColor="#FCFDFD"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#88138C"
        app:cornerRadius="20dp"
        app:iconPadding="10dp"
        app:textAllCaps="false" />

    <!-- Text view for indicating login option -->
    <TextView
        android:id="@+id/textView_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newuser_signin_btn"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="60dp"
        android:text="Already have an account"
        android:textColor="#FDFBFA"
        android:textSize="12sp" />

    <!-- Button for login -->
    <Button
        android:id="@+id/login_now_btn"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:insetLeft="12dp"
        android:insetRight="12dp"
        android:text="Login"
        android:textColor="#780093"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="#C8FFFCFF"
        app:cornerRadius="20dp"
        app:iconPadding="10dp"
        app:textAllCaps="false"
        tools:ignore="TextContrastCheck" />

    <!-- Text view for indicating seller registration link -->
    <TextView
        android:id="@+id/seller_reg_link1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_now_btn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:text="Want to become a Seller ?"
        android:textColor="#FFFEFE"
        android:textSize="13sp"
        android:textStyle="bold"
        app:textAllCaps="false" />


</RelativeLayout>